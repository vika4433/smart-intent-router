{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run MCP Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/smart-intent-router-server/src/mcp_server/server.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Test Client",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_mcp_client.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Web Client",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/web-client/src/gradio_app.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    }
  ],
  "compounds": [
    {
      "name": "Run Server and Test Client",
      "configurations": [
        "Run Test Client",
        "Run MCP Server"
      ],
      "stopAll": true
    },
    {
      "name": "Run Server and Web Client",
      "configurations": [
        "Run Web Client",
        "Run MCP Server"
      ],
      "stopAll": true
    }
  ]
}



